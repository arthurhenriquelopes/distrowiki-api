{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "USE_REDIS_CACHE": "false"
  },
  "crons": [
    {
      "path": "/distros/refresh",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/scraper/distrowatch/enrich-all",
      "schedule": "0 4 * * 0"
    }
  ]
}